	@GetMapping
	public ResponseEntity<List<UserDTO>> getAllUsers(){
		List<User> users = userServ.findAll();
		List<UserDTO> userdto = new ArrayList<>();
		users.forEach(u -> {
			userdto.add(mapper.toDTO(u));
		});
		return new  ResponseEntity<>(userdto , HttpStatus.OK);
	}
	
	@GetMapping("/{id}")
	public ResponseEntity<UserDTO> getOneUser(@PathVariable(value = "id" ) int id) {
		UserDTO user = mapper.toDTO(userServ.findById(id));
		return new ResponseEntity<>(user, HttpStatus.OK);
	}
	
	@GetMapping("/nid")
	public ResponseEntity<UserDTO> getByNID(@RequestParam(value = "nid" ) long nid) {
		UserDTO user = mapper.toDTO(userServ.findByNId(nid));
		return new ResponseEntity<>(user, HttpStatus.OK);
	}
	
	@GetMapping("/phone")
	public ResponseEntity<User> getByPhone(@RequestParam(value = "phone") long phone) {
		return new ResponseEntity<User>(userServ.findByPhone(phone), HttpStatus.OK);
	}
	
	@PostMapping
	public User postUser(@RequestBody User user) {		
		return userServ.saveUser(user);
	}
	
	@PutMapping
	public User putUser(@RequestBody User user) {		
		return userServ.saveUser(user);
	}
	
	@PatchMapping("/{id}")
	public User patchUser(@RequestBody User user ,@PathVariable int id) {		
		return userServ.editUser(id, user);
	}
}
